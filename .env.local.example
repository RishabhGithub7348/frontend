# =================================
# TourGuide AI Frontend Environment Configuration
# =================================

# Clerk Authentication
# --------------------
# Get from: https://clerk.com/
# Create a new application and get the keys from the dashboard
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Clerk URL Configuration
# -----------------------
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/voice
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/voice

# Production Clerk Keys (uncomment for production)
# NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here
# CLERK_SECRET_KEY=sk_live_your_live_secret_key_here

# Backend Configuration
# ---------------------
# Development URLs
NEXT_PUBLIC_BACKEND_URL=ws://localhost:9084
NEXT_PUBLIC_API_URL=http://localhost:9084

# Production URLs (uncomment and update for production)
# NEXT_PUBLIC_BACKEND_URL=wss://your-backend-domain.railway.app
# NEXT_PUBLIC_API_URL=https://your-backend-domain.railway.app

# Google Maps
# -----------
# Get from: https://console.cloud.google.com/apis/credentials
# Required APIs: Maps JavaScript API, Geocoding API, Places API
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# WebSocket Configuration
# -----------------------
# Timeout for WebSocket connections (in milliseconds)
NEXT_PUBLIC_WS_TIMEOUT=10000

# Maximum number of reconnection attempts
NEXT_PUBLIC_MAX_RECONNECT_ATTEMPTS=5

# Reconnection delay (in milliseconds)
NEXT_PUBLIC_WS_RECONNECT_DELAY=1000

# Audio Configuration
# -------------------
# Audio chunk size for streaming (in milliseconds)
NEXT_PUBLIC_AUDIO_CHUNK_SIZE=100

# Audio sample rate (Hz)
NEXT_PUBLIC_AUDIO_SAMPLE_RATE=16000

# Audio bit depth
NEXT_PUBLIC_AUDIO_BIT_DEPTH=16

# Voice activity detection threshold (0.0 - 1.0)
NEXT_PUBLIC_VAD_THRESHOLD=0.3

# Location Services
# -----------------
# Geolocation timeout (in milliseconds)
NEXT_PUBLIC_GEOLOCATION_TIMEOUT=10000

# Geolocation high accuracy mode
NEXT_PUBLIC_GEOLOCATION_HIGH_ACCURACY=true

# Maximum age of cached location (in milliseconds)
NEXT_PUBLIC_GEOLOCATION_MAX_AGE=300000

# Application Configuration
# -------------------------
# App name for branding
NEXT_PUBLIC_APP_NAME=TourGuide AI

# App version
NEXT_PUBLIC_APP_VERSION=1.0.0

# Support email
NEXT_PUBLIC_SUPPORT_EMAIL=support@tourguide.ai

# Analytics and Monitoring (Optional)
# -----------------------------------
# Google Analytics 4 Measurement ID
# NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-here

# PostHog API Key for user analytics
# NEXT_PUBLIC_POSTHOG_KEY=your_posthog_key_here
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Performance and Optimization
# ----------------------------
# Enable service worker for PWA features
NEXT_PUBLIC_ENABLE_SW=true

# Enable image optimization
NEXT_PUBLIC_ENABLE_IMAGE_OPTIMIZATION=true

# API request timeout (in milliseconds)
NEXT_PUBLIC_API_TIMEOUT=30000

# Feature Flags
# -------------
# Enable 3D audio visualization
NEXT_PUBLIC_ENABLE_3D_AUDIO=true

# Enable bookmark functionality
NEXT_PUBLIC_ENABLE_BOOKMARKS=true

# Enable language selection
NEXT_PUBLIC_ENABLE_LANGUAGE_SELECTOR=true

# Enable story mode
NEXT_PUBLIC_ENABLE_STORY_MODE=true

# Enable location sharing
NEXT_PUBLIC_ENABLE_LOCATION_SHARING=true

# Development and Debugging
# -------------------------
# Enable debug mode (shows console logs)
NEXT_PUBLIC_DEBUG_MODE=false

# Enable performance monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# Enable verbose logging
NEXT_PUBLIC_VERBOSE_LOGGING=false

# Show development tools in production
NEXT_PUBLIC_SHOW_DEV_TOOLS=false

# Security
# --------
# Content Security Policy mode (report-only or enforce)
NEXT_PUBLIC_CSP_MODE=report-only

# Enable HTTPS redirect in production
NEXT_PUBLIC_FORCE_HTTPS=true

# UI Configuration
# ----------------
# Theme preference (light, dark, system)
NEXT_PUBLIC_DEFAULT_THEME=dark

# Language preference (BCP-47 language code)
NEXT_PUBLIC_DEFAULT_LANGUAGE=en-US

# Maximum file upload size (in MB)
NEXT_PUBLIC_MAX_FILE_SIZE=10

# Social Media Integration (Optional)
# -----------------------------------
# Links for social media sharing
NEXT_PUBLIC_TWITTER_URL=https://twitter.com/tourguideai
NEXT_PUBLIC_FACEBOOK_URL=https://facebook.com/tourguideai
NEXT_PUBLIC_INSTAGRAM_URL=https://instagram.com/tourguideai

# Next.js Configuration
# ---------------------
# Build configuration
NEXT_PUBLIC_BUILD_ID=development
NEXT_PUBLIC_BUILD_TIME=2024-01-01T00:00:00.000Z

# Vercel-specific (if deploying to Vercel)
# NEXT_PUBLIC_VERCEL_URL=your-app.vercel.app
# NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA=abc123